<!DOCTYPE html>
<html>
<head>
  <title>Newport</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>

  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="myNav" >
  <div class="container-fluid" >
    <div class="navbar-header" >
      <a class="navbar-brand" >Picker</a>
    </div> <!-- end of navbar-header -->

      <% if current_user %>

        <ul class="nav navbar-nav navbar-right">
          <p class="navbar-text navbar-left">Logged in as <%= current_user.email %></p>
          <li><%= link_to "Log Out", destroy_session_path, method: :delete, class:"active" %></li>
        </ul>


      <% else %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Register", new_user_path %></li>
              <li><%= link_to "Log In", new_session_path %></li>
          </ul>

        </div><!-- /.navbar-collapse -->
      <% end %>

    </div><!-- /.container-fluid -->
</nav>

<% if current_user %>

<div class="container" style="border: 1px solid black;">
  <div class="row">
    <div class="col-md-2">
      <h2>Accounts</h2>
      <h2><%= link_to "Transactions", transactions_all_path(current_user.id) %><h2>
      <h2>Watchlist</h2>
      <h2>Alerts</h2>
      <h2><%= link_to "NewsFeed", news_path %></h2>
    </div>
  </div>
</div>

<% end %>



<div class="container" style="border: 1px solid red;">
  <div class="row">
      <div class="col-md-10"><%= yield %></div>
  </div>
</div>



</body>
</html>
